<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.shoping.luxerush.HowItWork">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:background="@color/lightGray"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"

            android:background="@drawable/ic_hiw_mobile"
            android:layout_gravity="center_horizontal"
            >
            <com.shoping.Container.PagerContainer
                android:id="@+id/pager_container"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    />


            </com.shoping.Container.PagerContainer>
            <!--<android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:layout_height="match_parent"
                />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/textColorBlack"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hit_iv_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_hiw_color_dot"
                    />
                <ImageView
                    android:id="@+id/hit_iv_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_hiw_white_dot"
                    />
                <ImageView
                    android:id="@+id/hit_iv_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_hiw_white_dot"
                    />
                <ImageView
                    android:id="@+id/hit_iv_fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_hiw_white_dot"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up with"
                    android:textColor="@color/white"
                    />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_hiw_horizontal"
                    android:layout_marginTop="3dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"

                    >
                    <ImageButton
                        android:id="@+id/hit_fb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_hiw_fb"

                        />
                    <ImageButton
                        android:id="@+id/hit_google"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_hiw_google"

                        android:layout_marginLeft="30dp"
                        />
                    <ImageButton
                        android:id="@+id/hit_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_hiw_email"

                        android:layout_marginLeft="30dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/hit_later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Ask me later"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"

                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
