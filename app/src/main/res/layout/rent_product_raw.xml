<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    android:background="@color/white"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/itemlist_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/rent_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            />

        <LinearLayout
            android:layout_below="@id/rent_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/rent_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginTop="10dp"
                android:textColor="@color/darkGray"
                android:textStyle="bold"
                android:textSize="@dimen/small_text_size"
                />

            <TextView
                android:id="@+id/rent_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start date"
                android:textColor="@color/darkGray"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/small_text_size"
                />
            <TextView
                android:id="@+id/rent_product_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start date"
                android:textColor="@color/darkGray"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/small_text_size"
                />
            <TextView
                android:id="@+id/rent_product_enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start date"
                android:textColor="@color/darkGray"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/small_text_size"
                />
            <TextView
                android:id="@+id/rent_product_returned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start date"
                android:textColor="@color/darkGray"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/small_text_size"
                />

            <TextView
                android:id="@+id/rent_product_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start date"
                android:textColor="@color/darkGray"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/small_text_size"
                />

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>
