<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:id="@+id/rl_rent_detail"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/buy_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textColor="@color/golden"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/buy_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID:"
                android:textColor="@color/darkGray"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/medium_text_size"

                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/buy_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ordered on:"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/medium_text_size"
                    />

                <TextView
                    android:id="@+id/buy_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/medium_text_size"
                    />
                <TextView
                    android:id="@+id/buy_order_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ordered on:"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/medium_text_size"
                    />

               <TextView
                android:id="@+id/buy_order_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Item:"
                   android:layout_marginTop="10dp"
                android:textSize="@dimen/medium_text_size"
                   android:textColor="@color/textColorBlack"
                />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Address"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginTop="15dp"
            android:textColor="@color/textColorBlack"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/buy_order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/medium_text_size"
            android:layout_marginTop="5dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:layout_alignParentRight="true"
                android:textColor="@color/golden"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>