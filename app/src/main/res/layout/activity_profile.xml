<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorBlack"

    tools:context="com.shoping.luxerush.Profile">

    <RelativeLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:theme="@style/Toolbar_Theme"


            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_home_logo"
                />



        </android.support.v7.widget.Toolbar>


        <ImageView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_options_all"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            >
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/biggest_text_size"
            />
        <TextView
            android:id="@+id/profile_mobile"
            android:layout_below="@id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size"
            />
            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pranavmittal25@gmail.com"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text_size"
                />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_bg_shape"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Details"
                android:layout_marginLeft="10dp"
                android:textColor="@color/darkGray"
                android:textStyle="bold"
                android:textSize="@dimen/big_text_size"
                />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_header_edit"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/golden"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/darkGray"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/golden"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/darkGray"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:id="@+id/edit_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/golden"
            android:drawableLeft="@drawable/ic_mobile"
            android:drawablePadding="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/darkGray"
            android:hint="Mobile"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="10"
            />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Address"
                android:layout_marginLeft="10dp"
                android:textColor="@color/darkGray"
                android:textStyle="bold"
                android:textSize="@dimen/big_text_size"
                />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_header_edit"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        <EditText
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/golden"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/darkGray"
            android:hint="Address"
            android:imeOptions="actionNext"
            android:singleLine="true"
            />
        <EditText
            android:id="@+id/edit_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/golden"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/darkGray"
            android:hint="City"
            android:imeOptions="actionNext"
            android:singleLine="true"
            />
        <EditText
            android:id="@+id/edit_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/golden"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/darkGray"
            android:hint="Zip"
            android:inputType="number"
            android:maxLength="6"
            android:imeOptions="actionDone"
            android:singleLine="true"
            />

            <Button
                android:id="@+id/edit_updade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/golden_button_selector"
                android:minHeight="@dimen/button_size"
                android:text="Update"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/small_text_size"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_bg_shape"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/darkGray"
                    android:textStyle="bold"
                    android:textSize="@dimen/big_text_size"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_header_edit"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <EditText
                android:id="@+id/edit_oldpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/golden"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/textColorBlack"
                android:textColorHint="@color/darkGray"
                android:hint="Old Password"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:inputType="textPassword"
                />
            <EditText
                android:id="@+id/edit_newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/golden"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/textColorBlack"
                android:textColorHint="@color/darkGray"
                android:hint="New Password"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:inputType="textPassword"
                />
            <EditText
                android:id="@+id/edit_confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/golden"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/textColorBlack"
                android:textColorHint="@color/darkGray"
                android:hint="Confirm Password"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:inputType="textPassword"
                />

            <Button
                android:id="@+id/edit_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/golden_button_selector"
                android:minHeight="@dimen/button_size"
                android:text="Change Password"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/small_text_size"
                />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
